<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
<!------------------------------------------------------------------->
      <%= render 'userinfo', new_book: @new_book, user: @user %>
<!------------------------------------------------------------------->
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-2">Users</h2>
      <div><%=link_to "グループを作成する",new_group_path %> | <%=link_to "グループ一覧",groups_path %></div>

      <table class="table table-striped", cellpadding = "5">
        <thead>
          <tr>
            <th align="center">image</th>
            <th>name</th>
            <th colspan ="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image("40x40") %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id)%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>